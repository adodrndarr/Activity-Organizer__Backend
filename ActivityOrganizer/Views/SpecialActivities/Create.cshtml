@model ActivityOrganizer.Models.SpecialActivity

@{
    ViewData["Title"] = "Create";
}

    <h1>Create Special Activity</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-yellow"></div>

            <div class="form-group">
                <label asp-for="ActivityName" class="control-label"></label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-yellow"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-yellow"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinish" class="control-label"></label>
                <input asp-for="DateFinish" class="form-control" />
                <span asp-validation-for="DateFinish" class="text-yellow"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfActivity" class="control-label"></label>
                <input asp-for="TypeOfActivity" class="form-control" />
                <span asp-validation-for="TypeOfActivity" class="text-yellow"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityPriority" class="control-label"></label>
                <input asp-for="ActivityPriority" class="form-control" />
                <span asp-validation-for="ActivityPriority" class="text-yellow"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-to-list">
    <a asp-action="Index" class="text-yellow">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}